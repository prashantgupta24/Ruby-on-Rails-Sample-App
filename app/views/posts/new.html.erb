<h1> Add a new Post! </h1>
<%= form_for @post do |f| %>
	<p>
		<%= f.label "Title" %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label "Body" %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label "Category Id" %><br />
		<%= f.text_field :category_id %>
	</p>
	<p>
		<%= f.submit "Add" %>
	</p>
<% end %>